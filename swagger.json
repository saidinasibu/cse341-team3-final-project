  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid",
        "description": "Session cookie created after GitHub OAuth login"
      }
    },
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "genre": { "type": "string" },
          "publishedYear": { "type": "integer" },
          "language": { "type": "string" },
          "pages": { "type": "integer" },
          "available": { "type": "boolean" },
          "summary": { "type": "string" }
        }
      },
      "Author": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "birthYear": { "type": "integer" },
          "nationality": { "type": "string" },
          "awards": {
            "type": "array",
            "items": { "type": "string" }
          },
          "numBooksWritten": { "type": "integer" }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "owner": { "type": "string" },
          "employees": { "type": "integer" }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "fullName": { "type": "string" },
          "address": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phoneNumber": { "type": "string" }
        }
      }
    }
  }
