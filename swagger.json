{
  "openapi": "3.0.0",
  "info": {
    "title": "Next Chapter Books API",
    "description": "API for a bookstore project. Includes Books, Authors, Stores, and Customers. CRUD endpoints and OAuth GitHub for protected routes.",
    "version": "1.0.0"
  },

  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],

  "paths": {
    "/books": {
      "get": {
        "summary": "Get all books",
        "responses": {
          "200": { "description": "List of books" }
        }
      },
      "post": {
        "summary": "Create a new book",
        "responses": {
          "201": { "description": "Book created" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/books/{id}": {
      "get": {
        "summary": "Get one book",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Book found" },
          "400": { "description": "Invalid ID" },
          "404": { "description": "Book not found" }
        }
      },
      "put": {
        "summary": "Update a book",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Book updated" },
          "400": { "description": "Invalid ID" }
        }
      },
      "delete": {
        "summary": "Delete a book",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Book deleted" },
          "400": { "description": "Invalid ID" }
        }
      }
    },

    "/authors": {
      "get": {
        "summary": "Get all authors",
        "responses": {
          "200": { "description": "List of authors" }
        }
      },
      "post": {
        "summary": "Create a new author",
        "responses": {
          "201": { "description": "Author created" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/authors/{id}": {
      "get": {
        "summary": "Get one author",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Author found" },
          "400": { "description": "Invalid ID" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update an author",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Author updated" },
          "400": { "description": "Invalid ID" }
        }
      },
      "delete": {
        "summary": "Delete an author",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Author deleted" },
          "400": { "description": "Invalid ID" }
        }
      }
    },

    "/stores": {
      "get": {
        "summary": "Get all stores",
        "responses": {
          "200": { "description": "List of stores" }
        }
      },
      "post": {
        "summary": "Create a new store",
        "responses": {
          "201": { "description": "Store created" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/stores/{id}": {
      "get": {
        "summary": "Get one store",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Store found" },
          "400": { "description": "Invalid ID" }
        }
      },
      "put": {
        "summary": "Update a store",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Store updated" },
          "400": { "description": "Invalid ID" }
        }
      },
      "delete": {
        "summary": "Delete a store",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Store deleted" },
          "400": { "description": "Invalid ID" }
        }
      }
    },

    "/customers": {
      "get": {
        "summary": "Get all customers",
        "responses": {
          "200": { "description": "List of customers" }
        }
      },
      "post": {
        "summary": "Create a new customer",
        "responses": {
          "201": { "description": "Customer created" },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/customers/{id}": {
      "get": {
        "summary": "Get one customer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Customer found" },
          "400": { "description": "Invalid ID" }
        }
      },
      "put": {
        "summary": "Update a customer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Customer updated" },
          "400": { "description": "Invalid ID" }
        }
      },
      "delete": {
        "summary": "Delete a customer",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "204": { "description": "Customer deleted" },
          "400": { "description": "Invalid ID" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "genre": { "type": "string" },
          "publishedYear": { "type": "integer" },
          "language": { "type": "string" },
          "pages": { "type": "integer" },
          "available": { "type": "boolean" },
          "summary": { "type": "string" }
        }
      },
      "Author": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "birthYear": { "type": "integer" },
          "nationality": { "type": "string" },
          "awards": {
            "type": "array",
            "items": { "type": "string" }
          },
          "numBooksWritten": { "type": "integer" }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "owner": { "type": "string" },
          "employees": { "type": "integer" }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "fullName": { "type": "string" },
          "address": { "type": "string" },
          "email": { "type": "string" },
          "phoneNumber": { "type": "string" }
        }
      }
    }
  }
}
